<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center"
    tools:context=".MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Capture MRZ"
        android:onClick="onCaptureMRZ"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Capture MRZ Full"
        android:onClick="onCaptureMRZWithNFC"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Authenticate Citizen"
        android:onClick="onAuthenticateCitizen"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Generate Identity"
        android:onClick="onGenerateIdentity"/>

    <Button
        android:id="@+id/signPDFButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign PDF"
        android:onClick="onSignPDF"/>

    <TextView
        android:id="@+id/textView"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!" />

</LinearLayout>